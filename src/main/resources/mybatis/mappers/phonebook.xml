<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">
	
	<!-- 쿼리문 작성 -->
	<select id="selectList" resultType="com.javaex.vo.PersonVo">
		<![CDATA[
			select  person_id as personId
			        ,name
			        ,hp
			        ,company
			from person
			order by person_id desc
		]]>
	</select>
	
	
	<insert id="personInsert" parameterType="com.javaex.vo.PersonVo">  
	    <![CDATA[
			insert into person
			values (seq_person_id.nextval, #{name}, #{hp}, #{company})
	    ]]>
	</insert>

	
	<delete id="personDelete" parameterType="com.javaex.vo.PersonVo">
		<![CDATA[
			delete from person
			where person_id = #{personId}
		]]>
	</delete>
	
	<select id="getPerson">
	
	</select>
	
	
	
	
	

</mapper>
